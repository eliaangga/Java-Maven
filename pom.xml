<project>
    <!-- Konfigurasi lainnya -->
    
    <properties>
        <!-- Menonaktifkan analisis otomatis -->
        <sonar.autoAnalysis>false</sonar.autoAnalysis>
    </properties>
    
    <!-- Konfigurasi plugin SonarQube -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.sonarsource.scanner.maven</groupId>
                <artifactId>sonar-maven-plugin</artifactId>
                <version>3.9.1.2184</version>
            </plugin>
        </plugins>
    </build>
    
    <!-- Profil SonarQube -->
    <profiles>
        <profile>
            <id>sonar</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.sonarsource.scanner.maven</groupId>
                        <artifactId>sonar-maven-plugin</artifactId>
                        <version>3.9.1.2184</version>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    
    <!-- Konfigurasi lainnya -->
</project>
